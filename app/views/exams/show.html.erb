<%= render 'layouts/header' %>
<h1><%= @exam.paper.title %></h1>
<h2><%= @exam.paper.subject.name %></h2>
<h2>考生姓名： <%= @exam.user.name %></h2>
<p>正确率：<%= @exam.calculate_score %>%</p>
<div>
	<% @exam.answers.each do |answer| %>
		<div class="panel <%= answer.option&.is_right_answer ? "panel-success" : "panel-danger" %>">
			<div class="panel-heading">
				<%= answer.question.title %>
			</div>
		  <div class="panel-body">
		  	<ul>
					<% answer.question.options.each do |option| %>
						<li><%= option.content %></li>
					<% end %>
				</ul>
		  </div>
		  <div class="panel-footer">
		  	<% if answer.option %>
		  		<%= "你的选择是：#{answer.option.content} " %>
				<% else %>
					未作答
				<% end %>
		  </div>
		</div>
	<% end %>
</div>