<% provide(:title,'填空题管理') %>
<%= render 'admin/layouts/header' %>
<h1>填空题列表</h1>
<%= link_to "创建填空题", new_admin_sentence_completion_path %>
<table class="table">
  <thead>
    <th>科目</th>
    <th>难易度</th>
    <th>题目</th>
    <th>标准答案</th>
    <th>操作</th>
  </thead>
  <% @sentence_completions.each do |sentence_completion| %>
    <tr>
      <td><%= sentence_completion.subject.name %></td>
      <td><%= sentence_completion.level %></td>
      <td><%= sentence_completion.title %></td>
      <td><%= sentence_completion.standard_answer %></td>
      <td>
        <% if sentence_completion.can_be_destroy? %>
          <%= link_to "删除" , admin_question_path(sentence_completion), method: :delete, data: {confirm: "确认删除？"} %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
<%= will_paginate @sentence_completions %>