<% provide(:title,'添加填空题') %>
<%= render 'admin/layouts/header' %>
<%= form_for @short_answer_question, url: admin_short_answer_questions_path, 
			class: "form-horizontal" do |f| %>
  <% if @short_answer_question.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@short_answer_question.errors.count, "error") %></h2>
      <ul>
      <% @short_answer_question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1>管理简答题</h1>

  <div class="form-group">
    <%= f.label :title, "题目", class: "control-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :subject_id, "科目", class: "control-label" %>
    <%= f.collection_select :subject_id, Subject.all, :id, :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :level, "难易程度", class: "control-label" %>
    <%= f.select :level, Paper.levels.keys, class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= f.label :standard_answer, "标准答案", class: "control-label" %>
  	<%= f.text_area :standard_answer, class: "form-control" %>
  </div>

  <div class="action">
    <%= f.submit "提交", class: "btn btn-primary" %>
  </div>
<% end %>