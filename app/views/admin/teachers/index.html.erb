<% provide(:title,'all teachers') %>
<%= render 'admin/layouts/header' %>
<h1>教师列表</h1>
<div>
  <table class="table">
  	<thead>
  		<th>姓名</th>
  		<th>邮箱</th>
  		<th>查看</th>

  		<th>删除</th>
  	</thead>
  	<% @users.each do |user| %>
  		<tr>
  			<td><%= user.name %></td>
  			<td><%= user.email %></td>
  			<td><%= link_to "查看" , admin_teacher_path(user) %></td>

  			<td><%= link_to "删除", admin_teacher_path(user), method: :delete,data:{confirm: "You sure?"} %></td>
  		</tr>
  	<% end %>
  </table>
  <%= will_paginate @users %>
</div>
