<% provide(:title,'添加判断题') %>
<%= render 'admin/layouts/header' %>
<%= form_for @true_or_flase_question, url: admin_true_or_flase_questions_path, 
			class: "form-horizontal" do |f| %>
  <% if @true_or_flase_question.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@true_or_flase_question.errors.count, "error") %></h2>
      <ul>
      <% @true_or_flase_question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1>管理填空题</h1>

  <div class="form-group">
    <%= f.label :title, "题目", class: "control-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :subject_id, "科目", class: "control-label" %>
    <%= f.collection_select :subject_id, Subject.all, :id, :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :level, "难易程度", class: "control-label" %>
    <%= f.select :level, Paper.levels.keys, class: "form-control" %>
  </div>
  <div class="form-group">
  	<p>答案</p>
	  <div class="radio">
	  	<%= f.label :true_answer, "正确", class: "control-label" %>
	  	<%= f.radio_button :true_answer, "true", class: "control-label" %>
	  </div>
	  <div class="radio">
	  	<%= f.label :true_answer, "错误", class: "control-label" %>
	  	<%= f.radio_button :true_answer, "flase", class: "control-label" %>
	  </div>
	</div>
  <div class="action">
    <%= f.submit "提交", class: "btn btn-primary" %>
  </div>
<% end %>