<% provide(:title,"edit") %>
<%= render 'teacher/layouts/header' %>
<h1>update your profile</h1>
<div class="row">
  <div class="col-md6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: @user %>
      <%=f.label :name %>
      <%=f.text_field :name ,class:'form-controller'%>
      <%=f.label :email %>
      <%=f.text_field :email ,class:'form-controller'%>
      <%=f.submit "Save changes" ,class:'btn btn-primary'%>
    <% end %>
  </div>
</div>