<% provide(:title,"edit") %>
<%= render 'layouts/header' %>
<h1>uodate your profile</h1>
<div class="panel panel-info">
	<div class="panel-heading">
		<%= form_for (@user) do |f| %>
  	  <%= render 'shared/error_messages', object: @user %>
  	  <%= f.label :name,"name" %>
  	  <%= f.text_field :name,class:'form-control' %>
		  <%= f.label :email %>
		  <%= f.text_field :email ,class:'form-controller'%>
	    <button type="button" class="btn btn-primary" data-toggle="collapse" 
	    data-target="#demo">change password</button>
	    <div id="demo" class="collapse">
	      <%= f.label :password %>
	      <%= f.password_field :password ,class:'form-controller'%>
	  	  <%= f.label :password_confirmation ,"password_confirmation" %>
	  	  <%= f.password_field :password_confirmation ,class:'form-controller'%>
	    </div>
		  <%= f.submit "Save changes" ,class:'btn btn-primary'%>
		<% end %>
	</div>
</div>
